{
  "identifier": "default",
  "description": "Default permissions for the app",
  "local": true,
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-set-size",
    "core:window:allow-inner-size",
    "core:window:allow-scale-factor",
    "log:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$RESOURCE/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$RESOURCE/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$RESOURCE/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$APPCONFIG"
        },
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$RESOURCE"
        },
        {
          "path": "$RESOURCE/*"
        }
      ]
    },
    "fs:allow-create",
    "fs:allow-write"
  ]
}